<!doctype html>
{{> page/nav}}

{{#if results}}
    <div class="row results">
        {{#each results}}
            <div class="col-md-3 card">
                <div class="product">
                    <div class="product-price">
                        <span class="product-price-reduced">{{this.price}}</span>
                        <span class="product-price-original">{{this.price}}</span>
                    </div>
                    <img class="product-image" src="{{this.image}}">
                    <div class="product-title"><a class="product-link" href="{{this.url}}" target="_blank">{{this.title}}</a></div>
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}
